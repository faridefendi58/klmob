<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_mxlarge">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/error_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/yellow_800"
                        android:padding="@dimen/spacing_middle"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/success_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/green_400"
                        android:padding="@dimen/spacing_middle"
                        android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/form_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/request_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Nama Anda"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/grey_500"/>

                <EditText
                        android:id="@+id/request_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:hint="Email Anda"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/grey_500"/>

                <RadioGroup
                        android:id="@+id/request_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis"/>

                    <RadioButton
                            android:id="@+id/request_type_chord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chord"
                            android:buttonTint="@color/grey_500" />

                    <RadioButton
                            android:id="@+id/request_type_lyric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lirik"
                            android:buttonTint="@color/grey_500"/>
                </RadioGroup>

                <EditText
                        android:id="@+id/request_song_title"
                        android:layout_width="361dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Judul Lagu"
                        android:backgroundTint="@color/grey_500"/>

                <EditText
                        android:id="@+id/request_artist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Nama Band/Artist"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/grey_500"/>

                <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/spacing_middle"
                        android:background="@color/green_500"
                        android:text="Request Sekarang"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_marginBottom="@dimen/spacing_middle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>